<ResourceDictionary
  x:Class="ClangPowerTools.MVVM.Views.Styles.YellowButtonStyle"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:local="clr-namespace:ClangPowerTools.MVVM.Views.Styles"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  mc:Ignorable="d">

  <Style x:Key="YellowButtonBackgroundStyle" TargetType="Button">
    <Setter Property="Background" Value="#FFBF31" />
    <Setter Property="Foreground" Value="Black" />
    <Style.Triggers>
      <Trigger Property="IsMouseOver" Value="True">
        <Setter Property="Background" Value="#FFD780" />
      </Trigger>
    </Style.Triggers>
  </Style>

</ResourceDictionary>
