<UserControl
  x:Class="ClangPowerTools.MVVM.Views.Components.MessageBanner"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:local="clr-namespace:ClangPowerTools.MVVM.Views.Components"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  Name="_MessageBanner"
  d:DesignHeight="200"
  d:DesignWidth="800"
  mc:Ignorable="d">
  <Grid VerticalAlignment="Top">
    <Image Source="{Binding Banner, ElementName=_MessageBanner}" />
    <Image
      Width="36"
      Height="36"
      Margin="23,21"
      HorizontalAlignment="Left"
      VerticalAlignment="Top"
      Source="{Binding Icon, ElementName=_MessageBanner}" />
    <Label
      Margin="75,20,284,26.333"
      Content="{Binding Type, ElementName=_MessageBanner}"
      FontSize="21"
      Foreground="White" />
  </Grid>
</UserControl>
