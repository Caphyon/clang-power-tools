<UserControl
  x:Class="ClangPowerTools.Views.TidyToolWindowView"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:local="clr-namespace:ClangPowerTools"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  xmlns:views="clr-namespace:ClangPowerTools.MVVM.Views"
  d:DesignHeight="490"
  d:DesignWidth="770"
  mc:Ignorable="d">

  <Grid>
    <!--<StackPanel Orientation="Vertical">
      --><!--<TextBlock HorizontalAlignment="Center">TidyToolWindow</TextBlock>-->
      <!--<Button
        Name="button1"
        Width="120"
        Height="80"
        Margin="1,300,1,1"
        Command="{Binding ShowFiles}"
        Content="Click me!" />--><!--
    </StackPanel>-->

    <ListView Background="WhiteSmoke" ItemsSource="{Binding Files}">
      <ListView.View>
        <GridView>
          <GridViewColumn DisplayMemberBinding="{Binding FileName}" Header="File Name" Width="500" />
        </GridView>
      </ListView.View>
      <ListView.ItemContainerStyle>
        <Style TargetType="ListViewItem">
          <EventSetter Event="MouseDoubleClick" Handler="ListViewItem_MouseDoubleClick"/>
        </Style>
      </ListView.ItemContainerStyle>
    </ListView>
  </Grid>
</UserControl>
