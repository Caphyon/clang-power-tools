<UserControl Focusable="False"
  x:Class="ClangPowerTools.Views.TidyToolWindowView"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:local="clr-namespace:ClangPowerTools"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  xmlns:views="clr-namespace:ClangPowerTools.MVVM.Views"
  d:DesignHeight="700"
  d:DesignWidth="350"
  mc:Ignorable="d">

  <Grid Focusable="False">
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="10" />
      <ColumnDefinition Width="330" />
      <ColumnDefinition Width="*" />
      <ColumnDefinition />
    </Grid.ColumnDefinitions>
    <Grid.RowDefinitions>
      <RowDefinition Height="10" />
      <RowDefinition Height="25" />
      <RowDefinition Height="20" />
      <RowDefinition Height="*" />
    </Grid.RowDefinitions>

    <Grid Grid.Row="1" Grid.Column="1">
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="85" />
        <ColumnDefinition Width="85" />
        <ColumnDefinition Width="85" />
        <ColumnDefinition Width="85" />
        <ColumnDefinition Width="*" />
        <ColumnDefinition />
      </Grid.ColumnDefinitions>
      <Grid.RowDefinitions>
        <RowDefinition Height="2.5" />
        <RowDefinition Height="20" />
        <RowDefinition Height="2.5" />
      </Grid.RowDefinitions>

      <Button
        Grid.Row="1"
        Grid.Column="0"
        Width="70"
        HorizontalAlignment="Left"
        Command="{Binding TidyAllCommand}"
        Content="Tidy" />
      <Button
        Grid.Row="1"
        Grid.Column="1"
        Width="70"
        HorizontalAlignment="Left"
        Command="{Binding FixAllCommand}"
        Content="Fix" />
      <Button
        Grid.Row="1"
        Grid.Column="2"
        Width="70"
        HorizontalAlignment="Left"
        Command="{Binding RemoveAllCommand}"
        Content="Remove" />
      <Button
        Grid.Row="1"
        Grid.Column="3"
        Width="70"
        HorizontalAlignment="Left"
        Command="{Binding DiscardAllCommand}"
        Content="Discard Fix" />
    </Grid>

    <Grid Focusable="False" Grid.Row="2" Grid.Column="1">
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="7" />
        <ColumnDefinition Width="20" />
        <ColumnDefinition Width="*" />
        <ColumnDefinition />
      </Grid.ColumnDefinitions>
      <Grid.RowDefinitions>
        <RowDefinition Height="2.5" />
        <RowDefinition Height="15" />
        <RowDefinition Height="5" />
      </Grid.RowDefinitions>

      <CheckBox
        Grid.Row="1"
        Grid.Column="1"
        Width="15"
        VerticalAlignment="Center"
        Click="CheckAll"
        IsChecked="{Binding TidyToolWindowModel.IsChecked, Mode=TwoWay}"
        Visibility="{Binding TidyToolWindowModel.ButtonVisibility}" />
      <TextBlock
        x:Name="textBox"
        Grid.Row="1"
        Grid.Column="2"
        Width="28"
        HorizontalAlignment="Left"
        VerticalAlignment="Center"
        Foreground="WhiteSmoke"
        Text="{Binding TidyToolWindowModel.TotalChecked}"
        TextWrapping="Wrap"
        Visibility="{Binding TidyToolWindowModel.ButtonVisibility}" />
    </Grid>

    <ProgressBar
      Name="pbStatus"
      Grid.Row="2"
      Grid.Column="1"
      Height="12"
      Background="#b4c3d9"
      BorderBrush="#296cba"
      Foreground="#296cba"
      IsIndeterminate="True"
      Maximum="100"
      Minimum="0"
      Visibility="{Binding TidyToolWindowModel.ProgressBarVisibility}" />

    <ListView
      x:Name="FilesList"
      Grid.Row="3"
      Grid.Column="1"
      Background="Transparent"
      Focusable="False"
      ItemsSource="{Binding Files}">
      <ListView.ItemTemplate>
        <DataTemplate>
          <Grid>
            <Grid.ColumnDefinitions>
              <ColumnDefinition Width="20" />
              <ColumnDefinition Width="220" />
              <ColumnDefinition Width="80" />
              <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
              <RowDefinition Focusable="False" Height="25" />
            </Grid.RowDefinitions>
            <CheckBox
              Grid.Column="0"
              Width="15"
              VerticalAlignment="Center"
              Click="CheckBox_Click"
              IsChecked="{Binding IsChecked, Mode=TwoWay}" />
            <TextBlock
              Grid.Column="1"
              Width="170"
              HorizontalAlignment="Left"
              VerticalAlignment="Center"
              Foreground="WhiteSmoke"
              Focusable="False"
              Text="{Binding FileName}" />
            <Button
              Grid.Column="2"
              Width="80"
              Height="20"
              VerticalAlignment="Center"
              Click="DiffButton"
              Content="Diff"
              Visibility="{Binding DiffVisibility}" />
            <Button
              Grid.Column="2"
              Width="70"
              Height="20"
              VerticalAlignment="Center"
              Click="FixButton"
              Content="Fix"
              Visibility="{Binding FixVisibility}" />
          </Grid>
        </DataTemplate>
      </ListView.ItemTemplate>
    </ListView>
  </Grid>
</UserControl>
