<UserControl
  x:Class="ClangPowerTools.Views.TidyToolWindowView"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:local="clr-namespace:ClangPowerTools"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  xmlns:views="clr-namespace:ClangPowerTools.MVVM.Views"
  d:DesignHeight="700"
  d:DesignWidth="350"
  mc:Ignorable="d">

  <Grid>
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="10" />
      <ColumnDefinition Width="330" />
      <ColumnDefinition Width="*" />
      <ColumnDefinition />
    </Grid.ColumnDefinitions>
    <Grid.RowDefinitions>
      <RowDefinition Height="10"/>
      <RowDefinition Height="25"/>
      <RowDefinition Height="20"/>
      <RowDefinition Height="*"/>
    </Grid.RowDefinitions>

    <Grid Grid.Row="1" Grid.Column="1">
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="5" />
        <ColumnDefinition Width="80" />
        <ColumnDefinition Width="80" />
        <ColumnDefinition Width="80" />
        <ColumnDefinition Width="80" />
        <ColumnDefinition Width="5" />
        <ColumnDefinition />
      </Grid.ColumnDefinitions>
      <Grid.RowDefinitions>
        <RowDefinition Height="2.5"/>
        <RowDefinition Height="20"/>
        <RowDefinition Height="2.5"/>
      </Grid.RowDefinitions>

      <Button
        Grid.Column="1"
        Grid.Row="1"
        Width="70"
        HorizontalAlignment="Center"
        Command="{Binding TidyAllCommand}"
        Visibility="{Binding TidyToolWindowModel.ButtonVisibility}"
        Content="Tidy" />
      <Button
        Grid.Column="2"
        Grid.Row="1"
        Width="70"
        HorizontalAlignment="Center"
        Command="{Binding FixAllCommand}"
        Visibility="{Binding TidyToolWindowModel.ButtonVisibility}"
        Content="Fix" />
      <Button
        Grid.Column="3"
        Grid.Row="1"
        Width="70"
        HorizontalAlignment="Center"
        Command="{Binding RemoveAllCommand}"
        Visibility="{Binding TidyToolWindowModel.ButtonVisibility}"
        Content="Remove"/>
      <Button 
        Grid.Column="4"
        Grid.Row="1"
        Width="70"
        HorizontalAlignment="Center"
        Command="{Binding DiscardAllCommand}"
        Visibility="{Binding TidyToolWindowModel.ButtonVisibility}"
        Content="Discard Fix" />
    </Grid>

    <Grid Grid.Column="1" Grid.Row="2">
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="5" />
        <ColumnDefinition Width="20" />
        <ColumnDefinition Width="*" />
        <ColumnDefinition />
      </Grid.ColumnDefinitions>
      <Grid.RowDefinitions>
        <RowDefinition Height="2.5"/>
        <RowDefinition Height="15"/>
        <RowDefinition Height="2.5"/>
      </Grid.RowDefinitions>
    
      <CheckBox
        Grid.Column="1"
        Grid.Row="1"
        Width="15"
        VerticalAlignment="Center"
        Click="CheckAll"
        Visibility="{Binding TidyToolWindowModel.ButtonVisibility}"
        IsChecked="{Binding TidyToolWindowModel.IsChecked, Mode=TwoWay}"/>
      <TextBlock 
        x:Name="textBox"
        Foreground="WhiteSmoke"
        Grid.Column="2"
        Grid.Row="1"
        HorizontalAlignment="Left"
        Width="28"
        TextWrapping="Wrap"
        Visibility="{Binding TidyToolWindowModel.ButtonVisibility}"
        Text="{Binding TidyToolWindowModel.TotalChecked}"
        VerticalAlignment="Center"/>
    </Grid>
    
    <ProgressBar
       Grid.Column="1"
       Grid.Row="0"
       Foreground="#296cba"
       Minimum="0"
       Height="12"
       Maximum="100"
       Name="pbStatus"
       Visibility="{Binding TidyToolWindowModel.ProgressBarVisibility}"
       IsIndeterminate="True"/>

    <ListView
      Grid.Column="1"
      Grid.Row="3"
      Background="Transparent"
      x:Name="FilesList"
      ItemsSource="{Binding Files}">
      <ListView.ItemTemplate>
        <DataTemplate>
          <Grid >
            <Grid.ColumnDefinitions>
              <ColumnDefinition Width="5" />
              <ColumnDefinition Width="20" />
              <ColumnDefinition Width="340" />
              <ColumnDefinition Width="80" />
              <ColumnDefinition Width="20" />
              <ColumnDefinition Width="5" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
              <RowDefinition Height="25"/>
            </Grid.RowDefinitions>
            <CheckBox
               Grid.Column="1"
               VerticalAlignment="Center"
               Click="CheckBox_Click"
               IsChecked="{Binding IsChecked, Mode=TwoWay}"></CheckBox>
               <TextBlock
               Grid.Column="2"
               VerticalAlignment="Center"
               HorizontalAlignment="Left"
               Width="170"
               Foreground="WhiteSmoke"
               Text="{Binding FileName}">
               </TextBlock>
               <Button
               Grid.Column="3"
               Visibility="{Binding DiffVisibility}"
               VerticalAlignment="Center"  
               Width="80"
               Height="20"
               Click="DiffButton"
               Content="Diff" />
               <Button
               Grid.Column="3"
               Visibility="{Binding FixVisibility}"
               Width="80"
               Height="20"
               VerticalAlignment="Center"
               Click="FixButton"
               Content="Fix" />
          </Grid>
        </DataTemplate>
      </ListView.ItemTemplate>
    </ListView>
  </Grid>
</UserControl>
