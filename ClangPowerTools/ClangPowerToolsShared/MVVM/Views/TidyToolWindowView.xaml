<UserControl
  x:Class="ClangPowerTools.Views.TidyToolWindowView"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:local="clr-namespace:ClangPowerTools"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  xmlns:views="clr-namespace:ClangPowerTools.MVVM.Views"
  d:DesignHeight="490"
  d:DesignWidth="770"
  mc:Ignorable="d">

  <Grid>
    <StackPanel Orientation="Vertical">
      <TextBlock Margin="10" HorizontalAlignment="Center">TidyToolWindow</TextBlock>
      <Button
        Name="button1"
        Width="120"
        Height="80"
        Click="button1_Click"
        Content="Click me!" />
    </StackPanel>

    <ListView Margin="10" ItemsSource="{Binding Files}">
      <ListView.View>
        <GridView>
          <GridViewColumn DisplayMemberBinding="{Binding FileName}" Header="Name" />
        </GridView>
      </ListView.View>
    </ListView>


  </Grid>

</UserControl>
