<UserControl
  x:Class="ClangPowerTools.Views.TidyToolWindowView"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:local="clr-namespace:ClangPowerTools"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  xmlns:views="clr-namespace:ClangPowerTools.MVVM.Views"
  d:DesignHeight="490"
  d:DesignWidth="394.015"
  mc:Ignorable="d">

  <Grid>
    <!--<StackPanel Orientation="Vertical">
    -->
    <!--<TextBlock HorizontalAlignment="Center">TidyToolWindow</TextBlock>-->
    <!--<Button
       Name="button1"
       Width="120"
       Height="80"
       Margin="1,300,1,1"
       Command="{Binding ShowFiles}"
       Content="Click me!" />-->
    <!--
       </StackPanel>-->
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="10" />
      <ColumnDefinition Width="392.8" />
      <ColumnDefinition />
    </Grid.ColumnDefinitions>
    <Grid.RowDefinitions>
      <RowDefinition Height="30"/>
      <RowDefinition Height="*"/>
    </Grid.RowDefinitions>

    <Button
      Grid.Column="1"
      Grid.Row="0"
      Margin="62,5,258,5"
      Command="{Binding TidyAllCommand}"
      Visibility="{Binding TidyToolWindowModel.ButtonVisibility}"
      Content="Tidy" />
    <Button
      Grid.Column="1"
      Grid.Row="0"
      Margin="140,4,180,6"
      Command="{Binding FixAllCommand}"
      Visibility="{Binding TidyToolWindowModel.ButtonVisibility}"
      Content="Fix" />
    <Button
      Grid.Column="1"
      Grid.Row="0"
      Margin="296,4,25,6"
      Command="{Binding RemoveAllCommand}"
      Visibility="{Binding TidyToolWindowModel.ButtonVisibility}"
      Content="Remove"/>
    <Button 
      Grid.Column="1"
      Grid.Row="0"
      Margin="218,4,102,6"
      Command="{Binding DiscardAllCommand}"
      Visibility="{Binding TidyToolWindowModel.ButtonVisibility}"
      Content="Discard Fix" />

    <CheckBox
      Grid.Column="1"
      VerticalAlignment="Top"
      Click="CheckAll"
      Visibility="{Binding TidyToolWindowModel.ButtonVisibility}"
      IsChecked="{Binding TidyToolWindowModel.IsChecked, Mode=TwoWay}"
      Margin="0,10,373,0"/>
    <TextBlock 
      x:Name="textBox"
      Foreground="WhiteSmoke"
      Grid.Column="1"
      HorizontalAlignment="Left"
      TextWrapping="Wrap"
      Visibility="{Binding TidyToolWindowModel.ButtonVisibility}"
      Text="{Binding TidyToolWindowModel.TotalChecked}"
      VerticalAlignment="Center"
      Width="28"
      Margin="25,0,0,0"/>
    <ProgressBar
       Grid.Column="1"
       Grid.Row="0"
       Foreground="#296cba"
       Minimum="0"
       Height="12"
       Maximum="100"
       Name="pbStatus"
       Visibility="{Binding TidyToolWindowModel.ProgressBarVisibility}"
       IsIndeterminate="True"/>

    <ListView
      Grid.Column="1"
      Background="#1f2120"
      x:Name="FilesList"
      ItemsSource="{Binding Files}"
      Margin="0.4,30,5.4,-0.4"
      Grid.RowSpan="2">
      <ListView.ItemTemplate>
        <DataTemplate>
          <Grid >
            <Grid.ColumnDefinitions>
              <ColumnDefinition Width="20" />
              <ColumnDefinition Width="200" />
              <ColumnDefinition Width="90" />
              <ColumnDefinition Width="90" />
              <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
              <RowDefinition Height="30"/>
            </Grid.RowDefinitions>
            <CheckBox
              Grid.Column="0"
              VerticalAlignment="Center"
              Click="CheckBox_Click"
              IsChecked="{Binding IsChecked, Mode=TwoWay}"></CheckBox>
            <TextBlock
              Grid.Column="1"
              VerticalAlignment="Center"
              Foreground="WhiteSmoke"
              Text="{Binding FileName}">
            </TextBlock>
            <Button
              Grid.Column="2"
              Visibility="{Binding DiffVisibility}"
              Width="80"
              Height="20"
              Margin="2,0,0,0"
              Click="DiffButton"
              Content="Diff" />
            <Button
              Grid.Column="2"
              Visibility="{Binding FixVisibility}"
              Width="80"
              Height="20"
              Margin="2,0,0,0"
              Click="FixButton"
              Content="Fix" />
          </Grid>
        </DataTemplate>
      </ListView.ItemTemplate>
    </ListView>
  </Grid>
</UserControl>
