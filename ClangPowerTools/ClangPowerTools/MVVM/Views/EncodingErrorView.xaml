<Window
  x:Class="ClangPowerTools.MVVM.Views.EncodingErrorView"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:local="clr-namespace:ClangPowerTools"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  Title="Clang Power Tools"
  Width="650"
  Height="450"
  Icon="pack://application:,,,/ClangPowerTools;component/Resources/ClangPowerToolsIco.ico"
  ResizeMode="NoResize"
  WindowStartupLocation="CenterScreen"
  mc:Ignorable="d">
  <Window.Resources>

    <Style x:Key="NoChromeButton" TargetType="{x:Type Button}">
      <Setter Property="Background" Value="Transparent" />
      <Setter Property="BorderThickness" Value="1" />
      <Setter Property="Foreground" Value="{DynamicResource {x:Static SystemColors.ControlTextBrushKey}}" />
      <Setter Property="HorizontalContentAlignment" Value="Center" />
      <Setter Property="VerticalContentAlignment" Value="Center" />
      <Setter Property="Padding" Value="1" />
      <Setter Property="ToolTip" Value="Clear search" />
      <Setter Property="Template">
        <Setter.Value>
          <ControlTemplate TargetType="{x:Type Button}">
            <Border BorderThickness="1">
              <Grid
                x:Name="Chrome"
                Background="{TemplateBinding Background}"
                SnapsToDevicePixels="true">
                <ContentPresenter
                  Margin="{TemplateBinding Padding}"
                  HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                  VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                  RecognizesAccessKey="True"
                  SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}" />
              </Grid>
            </Border>
            <ControlTemplate.Triggers>
              <Trigger Property="IsEnabled" Value="false">
                <Setter Property="Foreground" Value="#ADADAD" />
                <Setter TargetName="Chrome" Property="Opacity" Value="0.5" />
              </Trigger>
            </ControlTemplate.Triggers>
          </ControlTemplate>
        </Setter.Value>
      </Setter>
      <Style.Triggers>
        <DataTrigger Binding="{Binding Text.Length, ElementName=SearchTextBox}" Value="0">
          <DataTrigger.Setters>
            <Setter Property="ToolTip" Value="Search" />
          </DataTrigger.Setters>
        </DataTrigger>
      </Style.Triggers>
    </Style>
  </Window.Resources>
  <StackPanel>
    <Grid>
      <Image Source="pack://application:,,,/ClangPowerTools;component/Resources/BannersError.png" />
      <Image
        Width="36"
        Height="36"
        Margin="23,21"
        HorizontalAlignment="Left"
        VerticalAlignment="Top"
        Source="pack://application:,,,/ClangPowerTools;component/Resources/iconError.png" />
      <Label
        Margin="75,20,284,26.333"
        Content="Error"
        FontSize="21"
        Foreground="White" />
    </Grid>

    <StackPanel Margin="17" Orientation="Vertical">
      <TextBlock
        Margin="0,0,0,15"
        FontSize="13"
        Text="Unsupported encoding, byte order mark detected. To fix this issue, you need to convert the files below to UTF-8. Convert selected files?"
        TextWrapping="WrapWithOverflow" />
      <Border
        Height="auto"
        BorderBrush="Black"
        BorderThickness="0.5">
        <StackPanel>
          <Grid>
            <Grid.ColumnDefinitions>
              <ColumnDefinition Width="3*" />
              <ColumnDefinition Width="2*" />
            </Grid.ColumnDefinitions>

            <CheckBox
              Grid.Column="0"
              Margin="2,0"
              VerticalAlignment="Center"
              IsChecked="{Binding CheckAllItems}"
              ToolTip="{Binding SelectAllTooltipText}" />
            <TextBox
              x:Name="SearchTextBox"
              Grid.Column="1"
              Margin="2"
              Padding="0,0,30,0"
              HorizontalAlignment="Stretch"
              VerticalAlignment="Stretch"
              VerticalContentAlignment="Center"
              Panel.ZIndex="0"
              BorderBrush="LightGray"
              BorderThickness="1"
              Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}">
              <TextBox.Style>
                <Style xmlns:sys="clr-namespace:System;assembly=mscorlib" TargetType="TextBox">
                  <Style.Resources>

                    <VisualBrush
                      x:Key="GrayHelperTextBrush"
                      AlignmentX="Left"
                      AlignmentY="Center"
                      Stretch="None">
                      <VisualBrush.Visual>
                        <Label
                          Name="SearchLabel"
                          Content="Quick Search"
                          Foreground="Gray" />
                      </VisualBrush.Visual>
                    </VisualBrush>

                    <VisualBrush
                      x:Key="BlackHelperTextBrush"
                      AlignmentX="Left"
                      AlignmentY="Center"
                      Stretch="None">
                      <VisualBrush.Visual>
                        <Label
                          Name="SearchBlackLabel"
                          Content="Quick Search"
                          Foreground="Black" />
                      </VisualBrush.Visual>
                    </VisualBrush>

                  </Style.Resources>
                  <Style.Triggers>

                    <Trigger Property="IsKeyboardFocused" Value="True">
                      <Setter Property="Background" Value="White" />
                    </Trigger>

                    <MultiTrigger>
                      <MultiTrigger.Conditions>
                        <Condition Property="Text" Value="{x:Null}" />
                        <Condition Property="IsMouseOver" Value="False" />
                        <Condition Property="IsMouseCaptured" Value="False" />
                        <Condition Property="IsFocused" Value="False" />
                      </MultiTrigger.Conditions>
                      <MultiTrigger.Setters>
                        <Setter Property="Background" Value="{StaticResource GrayHelperTextBrush}" />
                      </MultiTrigger.Setters>
                    </MultiTrigger>

                    <MultiTrigger>
                      <MultiTrigger.Conditions>
                        <Condition Property="Text" Value="{x:Static sys:String.Empty}" />
                        <Condition Property="IsMouseOver" Value="False" />
                        <Condition Property="IsMouseCaptured" Value="False" />
                        <Condition Property="IsFocused" Value="False" />
                      </MultiTrigger.Conditions>
                      <MultiTrigger.Setters>
                        <Setter Property="Background" Value="{StaticResource GrayHelperTextBrush}" />
                      </MultiTrigger.Setters>
                    </MultiTrigger>

                    <MultiTrigger>
                      <MultiTrigger.Conditions>
                        <Condition Property="Text" Value="{x:Null}" />
                        <Condition Property="IsMouseOver" Value="True" />
                        <Condition Property="IsFocused" Value="False" />
                      </MultiTrigger.Conditions>
                      <MultiTrigger.Setters>
                        <Setter Property="Background" Value="{StaticResource BlackHelperTextBrush}" />
                      </MultiTrigger.Setters>
                    </MultiTrigger>

                    <MultiTrigger>
                      <MultiTrigger.Conditions>
                        <Condition Property="Text" Value="{x:Static sys:String.Empty}" />
                        <Condition Property="IsMouseOver" Value="True" />
                        <Condition Property="IsFocused" Value="False" />
                      </MultiTrigger.Conditions>
                      <MultiTrigger.Setters>
                        <Setter Property="Background" Value="{StaticResource BlackHelperTextBrush}" />
                      </MultiTrigger.Setters>
                    </MultiTrigger>

                  </Style.Triggers>
                </Style>
              </TextBox.Style>
            </TextBox>

            <Button
              Grid.Column="1"
              Width="17"
              Height="17"
              Margin="3"
              HorizontalAlignment="Right"
              VerticalAlignment="Center"
              Panel.ZIndex="1"
              BorderThickness="1"
              Command="{Binding SearchCommand}"
              Style="{DynamicResource NoChromeButton}">

              <Button.Template>
                <ControlTemplate TargetType="{x:Type Button}">
                  <Border>
                    <Grid>
                      <ContentPresenter />
                      <Grid
                        x:Name="StatusPanel"
                        Background="Black"
                        Opacity="0" />
                    </Grid>
                  </Border>
                  <ControlTemplate.Triggers>
                    <Trigger Property="IsMouseOver" Value="true">
                      <Setter TargetName="StatusPanel" Property="Opacity" Value="0.1" />
                    </Trigger>
                    <Trigger Property="IsPressed" Value="true">
                      <Setter TargetName="StatusPanel" Property="Opacity" Value="0.3" />
                    </Trigger>
                  </ControlTemplate.Triggers>
                </ControlTemplate>
              </Button.Template>

              <Button.Content>
                <Rectangle Width="16" Height="16">
                  <Rectangle.Style>
                    <Style TargetType="{x:Type Rectangle}">
                      <Setter Property="Fill">
                        <Setter.Value>
                          <ImageBrush ImageSource="pack://application:,,,/ClangPowerTools;component/Resources/CleanSearchIcon.png" />
                        </Setter.Value>
                      </Setter>
                      <Style.Triggers>
                        <DataTrigger Binding="{Binding Text.Length, ElementName=SearchTextBox}" Value="0">
                          <DataTrigger.Setters>
                            <Setter Property="Fill">
                              <Setter.Value>
                                <ImageBrush ImageSource="pack://application:,,,/ClangPowerTools;component/Resources/SearchIcon.png" />
                              </Setter.Value>
                            </Setter>
                          </DataTrigger.Setters>
                        </DataTrigger>
                      </Style.Triggers>
                    </Style>
                  </Rectangle.Style>
                </Rectangle>
              </Button.Content>
            </Button>
          </Grid>
          <ListBox
            Height="150"
            BorderBrush="Black"
            BorderThickness="0.5"
            ItemsSource="{Binding FilteredFilesNotEncodedInUTF8, Mode=OneWay}"
            ScrollViewer.VerticalScrollBarVisibility="Auto">
            <ListBox.Resources>
              <Style TargetType="{x:Type ListBoxItem}">
                <Setter Property="OverridesDefaultStyle" Value="true" />
                <Setter Property="SnapsToDevicePixels" Value="true" />
                <Setter Property="Template">
                  <Setter.Value>
                    <ControlTemplate TargetType="{x:Type ListBoxItem}">
                      <CheckBox
                        Margin="0,3"
                        Content="{Binding FileName}"
                        FontSize="13"
                        IsChecked="{Binding IsChecked}"
                        IsThreeState="False" />
                    </ControlTemplate>
                  </Setter.Value>
                </Setter>
              </Style>
            </ListBox.Resources>
          </ListBox>
        </StackPanel>
      </Border>


      <StackPanel
        Margin="0,15,0,0"
        HorizontalAlignment="Right"
        VerticalAlignment="Bottom"
        Orientation="Horizontal">
        <Button
          x:Name="ConvertButton"
          Width="98"
          Height="26"
          Margin="0,0,10,0"
          BorderThickness="1"
          Command="{Binding ConvertCommand}"
          CommandParameter="{Binding ElementName=window}"
          Content="Convert"
          FontSize="12"
          IsDefault="True"
          IsEnabled="{Binding IsConvertButtonEnabled}" />
        <Button
          Width="98"
          Height="26"
          BorderThickness="1"
          Command="{Binding CloseCommand}"
          Content="Close"
          FontSize="12" />
      </StackPanel>
    </StackPanel>
  </StackPanel>
</Window>
