<Window
  x:Class="ClangPowerTools.MVVM.Views.DiffWindow"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:local="clr-namespace:ClangPowerTools"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  Title="File Diff"
  MinWidth="900"
  MinHeight="750"
  d:DataContext="{d:DesignInstance local:DiffViewModel,
                                   IsDesignTimeCreatable=True}"
  Background="WhiteSmoke"
  Icon="/ClangPowerTools;component/Resources/ClangPowerToolsIco.ico"
  ResizeMode="CanResize"
  ShowInTaskbar="true"
  WindowStartupLocation="CenterScreen"
  WindowState="Maximized"
  mc:Ignorable="d">

  <!--  Static resources  -->
  <Window.Resources>
    <ResourceDictionary>
      <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="Styles/AppResources.xaml" />
      </ResourceDictionary.MergedDictionaries>
      <BooleanToVisibilityConverter x:Key="BoolToVis" />
    </ResourceDictionary>
  </Window.Resources>

  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="10" />
      <RowDefinition Height="*" />
      <RowDefinition Height="10" />
    </Grid.RowDefinitions>

    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="10" />
      <ColumnDefinition Width="*" />
      <ColumnDefinition Width="5" />
      <ColumnDefinition Width="auto" />
      <ColumnDefinition Width="10" />
    </Grid.ColumnDefinitions>

    <!--  Diff html  -->
    <WebBrowser
      Name="MyWebBrowser"
      Grid.Row="1"
      Grid.Column="1" />


    <!--  Detected Format Options  -->
    <StackPanel
      Grid.Row="1"
      Grid.Column="3"
      Orientation="Vertical">
      <TextBox
        Name="FormatOptions"
        Width="280"
        Background="Transparent"
        BorderThickness="0"
        FontWeight="DemiBold"
        IsReadOnly="True"
        Text="{Binding FormatOptionFile}"
        TextWrapping="Wrap" />

      <!--  Export button  -->
      <Button
        Width="150"
        Height="30"
        Margin="20,0,0,0"
        Command="{Binding CreateFormatFileCommand}"
        Content="Export .clang-format"
        FontSize="14"
        Foreground="White"
        Style="{StaticResource SettingsButton}" />
    </StackPanel>
  </Grid>
</Window>
