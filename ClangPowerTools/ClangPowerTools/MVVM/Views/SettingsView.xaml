<Window
  x:Class="ClangPowerTools.Views.SettingsView"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:controls="clr-namespace:ClangPowerTools.MVVM.Views.Components"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:local="clr-namespace:ClangPowerTools.Views"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  xmlns:platformui="clr-namespace:Microsoft.VisualStudio.PlatformUI;assembly=Microsoft.VisualStudio.Shell.14.0"
  Title="Settings"
  Width="760"
  Height="{Binding Heigth, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
  Icon="pack://application:,,,/ClangPowerTools;component/Resources/ClangPowerToolsIco.ico"
  ResizeMode="NoResize"
  ShowInTaskbar="False"
  WindowStartupLocation="CenterScreen"
  WindowStyle="ThreeDBorderWindow"
  mc:Ignorable="d">

  <Window.Resources>
    <ResourceDictionary>
      <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="Styles/AppResources.xaml" />
      </ResourceDictionary.MergedDictionaries>
    </ResourceDictionary>
  </Window.Resources>

  <Grid>

    <Grid.Resources>
      <Style TargetType="{x:Type Hyperlink}">
        <Setter Property="FocusVisualStyle" Value="{x:Null}" />
        <Setter Property="Foreground" Value="#FFFAA8B4" />
        <Setter Property="TextBlock.TextDecorations" Value="{x:Null}" />
        <Style.Triggers>
          <Trigger Property="IsMouseOver" Value="True">
            <Setter Property="Foreground" Value="#FFFAD4DB" />
          </Trigger>
        </Style.Triggers>
      </Style>
    </Grid.Resources>

    <Grid.RowDefinitions>
      <RowDefinition Height="*" />
      <RowDefinition Height="Auto" />
    </Grid.RowDefinitions>

    <Grid.Background>
      <ImageBrush ImageSource="/ClangPowerTools;component/Resources/SettingsBackground.png" Stretch="UniformToFill" />
    </Grid.Background>

    <TabControl Grid.Row="0">
      <TabItem Padding="8" FontSize="15">
        <TabItem.Header>
          <StackPanel Orientation="Horizontal">
            <Image
              Width="16"
              Height="16"
              Margin="3"
              Source="/ClangPowerTools;component/Resources/CompileIcon.png" />
            <TextBlock Width="65" Text="Compiler" />
          </StackPanel>
        </TabItem.Header>
        <Grid>
          <local:CompilerSettingsView />
        </Grid>
      </TabItem>

      <TabItem Padding="8" FontSize="15">
        <TabItem.Header>
          <StackPanel Orientation="Horizontal">
            <Image
              Width="16"
              Height="16"
              Margin="3"
              Source="/ClangPowerTools;component/Resources/TidyIcon.png" />
            <TextBlock Width="65" Text="Tidy" />
          </StackPanel>
        </TabItem.Header>
        <Grid>
          <local:TidySettingsView />
        </Grid>
      </TabItem>

      <TabItem Padding="8" FontSize="15">
        <TabItem.Header>
          <StackPanel Orientation="Horizontal">
            <Image
              Width="16"
              Height="16"
              Margin="3"
              Source="/ClangPowerTools;component/Resources/ClangFormatIcon.png" />
            <TextBlock Width="65" Text="Format" />
          </StackPanel>
        </TabItem.Header>
        <Grid>
          <local:FormatSettingsView />
        </Grid>
      </TabItem>

      <TabItem Padding="8" FontSize="15">
        <TabItem.Header>
          <StackPanel Orientation="Horizontal">
            <Image
              Width="16"
              Height="16"
              Margin="3"
              Source="/ClangPowerTools;component/Resources/SettingsLLVM.png" />
            <TextBlock Width="65" Text="LLVM" />
          </StackPanel>
        </TabItem.Header>
        <Grid>
          <local:LlvmSettingsView />
        </Grid>
      </TabItem>

      <TabItem Padding="8" FontSize="15">
        <TabItem.Header>
          <StackPanel Orientation="Horizontal">
            <Image
              Width="16"
              Height="16"
              Margin="3"
              Source="/ClangPowerTools;component/Resources/TeamIcon.png" />
            <TextBlock Width="65" Text="Team" />
          </StackPanel>
        </TabItem.Header>
        <Grid>
          <local:TeamSettingsView />
        </Grid>
      </TabItem>

      <TabItem Padding="8" FontSize="15">
        <TabItem.Header>
          <StackPanel Orientation="Horizontal">
            <Image
              Width="15"
              Height="15"
              Margin="3"
              Source="/ClangPowerTools;component/Resources/AccountIcon.png" />
            <TextBlock Width="65" Text="Account" />
          </StackPanel>
        </TabItem.Header>
        <Grid>
          <local:AccountView />
        </Grid>
      </TabItem>

      <TabItem Padding="8" FontSize="15">
        <TabItem.Header>
          <StackPanel Orientation="Horizontal">
            <Image
              Width="15"
              Height="15"
              Margin="3"
              Source="/ClangPowerTools;component/Resources/FeedbackIcon.png" />
            <TextBlock Width="65" Text="Feedback" />
          </StackPanel>
        </TabItem.Header>
        <Grid>
          <local:FeedbackView />
        </Grid>
      </TabItem>
    </TabControl>

    <controls:BuyNowFooter Grid.Row="1" />

  </Grid>

</Window>
